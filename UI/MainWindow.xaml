<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="UI.MainWindow"
        Title="SURU" Height="374" Width="633" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FFECEBE5" Offset="0.036"/>
            <GradientStop Color="#FFE4DF67" Offset="0.843"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button Content="Entrar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Margin="150,90,0,0" Click="Button_Click"/>
        <Button Content="Limpar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Margin="30,90,0,0" Click="Button_Click"/>
        <TextBox x:Name="txtMatricula" HorizontalAlignment="Center" Height="23" Margin="0,-30,0,0" TextWrapping="Wrap" Text="Matrícula" VerticalAlignment="Center" Width="200"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Center" Height="23" Margin="0,30,0,0" TextWrapping="Wrap" Text="Senha" VerticalAlignment="Center" Width="200"/>
    </Grid>
</Window>
